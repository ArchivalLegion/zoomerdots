#!/bin/sh

# Xresources - Xdefaults
xrdb ~/.Xresources &

# xsettings daemon
xsettingsd &

# Mate polkit agent for authentication
/usr/lib/x86_64-linux-gnu/polkit-mate/polkit-mate-authentication-agent-1 &

# Setup monitors
# screens &
# sleep 2 &&

# Nitrogen
nitrogen --restore &

# Make sure Dunst gets started
dunst &

# KDE connect
kdeconnect-indicator &

# Compton - Picom
sleep 1 &&
compton -b
